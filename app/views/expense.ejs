<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include partials/head.ejs %>
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="container">
      <form method="POST" action="/expense/edit-expense">
        <div class="form-group row">
          <label for="categoryInput" class="col-sm-2 col-form-label">Expense Category</label>
          <div class="col-sm-10">
            <input type="text" name="category" readonly id="categoryInput" class="form-control" value="<%=expenseItem.category%>" placeholder="Enter expense category"/>
          </div>
        </div>
        <div class="form-group row">
          <label for="recipientInput" class="col-sm-2 col-form-label">Recipient</label>
          <div class="col-sm-10">
            <input type="text" name="recipient" readonly  id="recipientInput" class="form-control" value="<%=expenseItem.recipient%>" placeholder="Enter expense recipient"/>
          </div>
        </div>
        <div class="form-group row">
          <label for="descriptionInput" class="col-sm-2 col-form-label">Description</label>
          <div class="col-sm-10">
            <input type="text" name="description" readonly  id="descriptionInput" class="form-control" value="<%=expenseItem.description%>" placeholder="Enter expense description"/>
          </div>
        </div>
        <div class="form-group row">
          <label for="amountInput" class="col-sm-2 col-form-label">Expense Amount</label>
          <div class="col-sm-10">
            <input type="number" readonly step="0.01" min="0" name="amount" id="amountInput" class="form-control" value="<%=expenseItem.amount%>" placeholder="Enter expense amount"/>
          </div>
        </div>
        <div class="form-group row">
          <label for="dateInput" class="col-sm-2 col-form-label">Date</label>
          <div class="col-sm-10">
            <input type="date" readonly name="date" id="dateInput" class="form-control" value="<%=expenseItem.createtime.toISOString().split('T')[0]%>" placeholder="Enter date of transaction"/>
          </div>
        </div>
        <div class="form-group row">
          <label for="tagsInput" class="col-sm-2 col-form-label">Tags</label>
          <div class="col-sm-10">
            <input type="text" readonly name="tags" id="tagsInput" class="form-control" value="<%=expenseItem.tags%>" placeholder="Enter expense tags"/>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Edit</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>